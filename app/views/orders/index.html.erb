<%= provide(:page_title, 'Orders') %>
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="text-center">Shipped Orders</h2>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Order #</th>
            <th scope="col">Shipped Date</th>
            <th scope="col">Expedite</th>
          </tr>
        </thead>
        <tbody>
          <% @orders_shipped.each do |order| %>
            <tr>
              <td><%= link_to order.id, order_path(order) %></td>
              <td><%= order.shipped_at %></td>
              <td><%= order.expedite ? 'yes' : 'no' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col">
      <h2 class="text-center">Not Shipped Orders</h2>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Order #</th>
            <th scope="col">Shipped Date</th>
            <th scope="col">Expedite</th>
          </tr>
        </thead>
        <tbody>
          <% @orders_not_shipped.each do |order| %>
            <tr>
              <td><%= link_to order.id, order_path(order) %></td>
              <td><%= order.shipped_at.nil? ? "n/a" : order.shipped_at %></td>
              <td><%= order.expedite ? 'yes' : 'no' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <h3 class="col"><%= link_to "+ New Order", new_order_path, {class: 'btn btn-primary'} %></h3>
  </div>
</div>
